{% extends 'base.html.twig' %}

{% block title %}	Listando partidas de Time
{% endblock %}

{% block body %}

	<h1 class="display-3">Partidas de "{{ time.nome }}"</h1>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Campeonato</th>
				<th>Advers√°rio</th>
				<th>Placar</th>
				<th>Local</th>
				<th>Data</th>
			</tr>
		</thead>
		<tbody>
		{% for partida in partidas %}
			<tr>
				<td>{{ partida.campeonato.nome }}</td>
				<td>
				{% if time.id == partida.timeCasa.id %}
                    {{ partida.timeVisitante.nome }}
                {% else %}
                	{{ partida.timeCasa.nome }}
                {% endif %}
				</td>
				<td>
				{% if time.id == partida.timeCasa.id %}
                    {{ partida.placarCasa }} x {{ partida.placarVisitante }}
                {% else %}
                    {{ partida.placarVisitante }} x {{ partida.placarCasa }}
                {% endif %}
				</td>
				<td>
				{% if time.id == partida.timeCasa.id %}
                    Time da Casa
                {% else %}
                    Time visitante
                {% endif %}
				</td>
				<td>{{ partida.dataPartida|date("d/m/Y H:i") }}</td>				
			</tr>
		{% endfor %}
		</tbody>
	</table>
	

{% endblock %}
